@layout RegistrationLayout
@page "/signup/security"

<div class="flex flex-col gap-3">

	<div class="flex flex-col gap-2">
		<h3 class="text-gray-500 text-sm">4. Email Address</h3>
		<p>What is your working email?</p>
		<div class="flex gap-3">
			<input type="email" placeholder="Email" class="border rounded px-2 py-2" />
		</div>
	</div>

	<div class="flex flex-col gap-2">
		<h3 class="text-gray-500 text-sm">5. Secure Password</h3>
		<p>What is your secure password?</p>
		<div class="flex gap-3">
			<input type="password" placeholder="Password" class="border rounded px-2 py-2" />
		</div>
	</div>

	<div class="flex flex-row-reverse gap-2">
		<button href="/signup" class="border-[1px] px-3 py-1 rounded hover:border-violet-500 hover:bg-violet-100">Submit</button>
		<a href="/signup" class="border-[1px] px-3 py-1 rounded hover:border-violet-500 hover:bg-violet-100">Back</a>
	</div>
</div>

