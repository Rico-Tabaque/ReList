@layout RegistrationLayout
@page "/signup"

<div class="flex flex-col gap-4">

	<div class="flex flex-col gap-2">
		<h3 class="text-gray-500 text-sm">1. Basic Information</h3>
		<p>What is your first name and last name?</p>
		<div class="flex gap-3">
			<input type="text" placeholder="First name" class="border rounded px-2 py-2" />
			<input type="text" placeholder="Last name" class="border rounded px-2 py-2" />
		</div>
	</div>

	<div class="flex flex-col gap-2">
		<h3 class="text-gray-500 text-sm">2. Email Address</h3>
		<p>What is your working email?</p>

		<div class="relative">
			<select class="block appearance-none border-[1px] hover:bg-violet-100 hover:border-violet-500 px-2 py-2 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-state">
				<option value="" disabled selected hidden>Country</option>
				<option>New Mexico</option>
				<option>Missouri</option>
				<option>Texas</option>
			</select>
		</div>
	</div>

	<div class="flex flex-col gap-2">
		<h3 class="text-gray-500 text-sm">3. Upload profile picture</h3>
		<p>Do you want a personalize profile picture?</p>

		<div class="flex gap-3">
			<div class="hover:cursor-pointer border-[1px] border-violet-500 bg-violet-100 w-[120px] h-[80px] p-2 rounded grid place-content-center">
				<div class="w-10">
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
						<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-5.5-2.5a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0zM10 12a5.99 5.99 0 00-4.793 2.39A6.483 6.483 0 0010 16.5a6.483 6.483 0 004.793-2.11A5.99 5.99 0 0010 12z" clip-rule="evenodd" />
					</svg>
				</div>
				<p class="text-sm">Generate random photo</p>
			</div>
			<div class="hover:border-violet-500 hover:cursor-pointer border-[1px] border-dashed w-[120px] h-[80px] p-2 rounded grid place-content-center">
				<div class="w-10">
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
						<path fill-rule="evenodd" d="M1 5.25A2.25 2.25 0 013.25 3h13.5A2.25 2.25 0 0119 5.25v9.5A2.25 2.25 0 0116.75 17H3.25A2.25 2.25 0 011 14.75v-9.5zm1.5 5.81v3.69c0 .414.336.75.75.75h13.5a.75.75 0 00.75-.75v-2.69l-2.22-2.219a.75.75 0 00-1.06 0l-1.91 1.909.47.47a.75.75 0 11-1.06 1.06L6.53 8.091a.75.75 0 00-1.06 0l-2.97 2.97zM12 7a1 1 0 11-2 0 1 1 0 012 0z" clip-rule="evenodd" />
					</svg>
				</div>
				<p class="text-sm">Upload custom photo</p>
			</div>
		</div>
	</div>

	<div class="flex flex-row-reverse">
		<a href="/signup/security" class="border-[1px] px-3 py-1 rounded hover:border-violet-500 hover:bg-violet-100">Next</a>
	</div>
</div>

